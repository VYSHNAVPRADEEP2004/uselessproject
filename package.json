{
  "name": "uselessos",
  "version": "1.0.0",
  "description": "A completely useless operating system simulator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "build.bat",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": ["useless", "os", "simulator", "fun"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.example.uselessos",
    "productName": "UselessOS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "uselessos.html",
      "uselessos.css",
      "uselessos.js",
      "assets/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  }
}
